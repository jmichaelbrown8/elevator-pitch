
<div class="modal fade" id="resource-modal" tabindex="-1" role="dialog" aria-labelledby="addresource-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">    
         <div class="modal-header">
                <h5 class="modal-title">Help collaborators visualize and explore your idea</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
      <div class="modal-body">

<div class='row gy-4'>
  <div class='card'>
    <div class='card-body'>
      <form action='/api/space/{{space_id}}/idea/{{idea_id}}/resource' enctype="multipart/form-data" method="post" id="image-upload">
        <div class='form-group'>
          <div class='card-title'>
            <label for='addImages' class='fs-4 fw-bold mb-2'>Add images</label>
          </div>

          <label for='image'><input
              class='form-control-file'
              type='file'
              name='image-file'
              accept='image/*'
              id='image'
              single
            /></label>
            </div>
            <br>
          <input
            type='submit'
            value="Upload"
            class='btn btn-primary '
          >Add</input>
        </div>
      </form>
    </div>

<div class='card'>
    <div class='card-body'>
      <form action='/api/space/{{space_id}}/idea/{{idea_id}}/resource' enctype="multipart/form-data" method="post" id="doc-upload">
        <div class='form-group'>
          <div class='card-title'>
            <label for='addImages' class='fs-4 fw-bold mb-2'>Add Docs (md, pdf, etc</label>
          </div>

          <label for='doc'><input
              class='form-control-file'
              type='doc-file'
              name='doc'
              accept='image/*'
              id='image'
              single
            /></label>
            </div>
            <br>
          <button
            type='submit'
            class='btn btn-primary '
          >Add</button>
        </div>
      </form>
    </div>

  {{! Upload links }}
  <div class='card'>
    <div class='card-body'>
      <form enctype='multipart/form-data' 
            action='/api/space/{{space_id}}/idea/{{idea_id}}/resource'>
        <div class='form-group'>
          <div class='card-title'>
            <label for='link' class='fs-4 fw-bold mb-2'>Add links</label>
          </div>

          <label for='link'><input
              class='form-control'
              type='link'
              name='link'
              multiple
              id='link'
            /></label>
        </div>
    <br>
          <button
            type='submit'
            class='btn btn-primary '
          >Add</button>
        </div>
      </form>
    </div>
</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>