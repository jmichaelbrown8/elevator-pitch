
<h3 class="space-id" data-id="{{space.id}}">{{space.name}}</h3>
<br>

{{#if approvedInterest}}
<div class="card card-body bg-secondary border-0 p-4" style="--bs-bg-opacity: 0.2">
    <div class="d-md-flex justify-content-between align-items-center">
        <div class="pe-md-4">
            <h3>
              You're Collaborating On<br/>
              <span class="text-primary" style="font-size:.7em">Idea: {{approvedInterest.idea.name}}</span>
            </h3>
            <p class="mb-3 mb-md-0">
                Congratulations on being approved as a collaborator! Jump into the idea to start adding resources and working with your team members.
            </p>
        </div>
        <div>
            <a class= 'btn btn-primary px-5 py-4 text-nowrap w-100' href="/space/{{space_id}}/idea/{{approvedInterest.idea.id}}">View Idea</a>
        </div> 
    </div>
</div>
{{else}}
{{!-- add idea or hide section --}}
<h4 class="bi bi-plus-circle" style="color:#009ecc; cursor:pointer"><a class="text-decoration-none" style="color:#009ecc" href="/space/{{space.id}}/ideas"> Add idea</a></h4>
{{/if}}

<div id="ideas" class="mt-4">
{{#each space.ideas}}
  {{> ideaMini  logged_in_user_id=../user_id approvedInterest=../approvedInterest}}
{{/each}}
</div>
<script src="/js/interest.js"></script>
<script src ="/js/ideaUpvote.js"></script>
{{name}}
<div id="memberList" data-space-id={{space-id}}>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">Members</h5>
    </div>
  </div>
  {{#each space.members}}
    {{> memberStatus }}
  {{/each}}
</div>
<script src="/js/memberList.js"></script>

