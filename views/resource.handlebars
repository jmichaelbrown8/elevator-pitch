<button
  type='submit'
  onclick="window.location.href='/space/{{space_id}}/idea/{{idea_id}}'"
  class='btn btn-primary mb-3'
> Back to idea</button>

{{! Current resource information }}

<div class='bg-primary text-white my-4'>
  <h3 class='card-header justify-content-start'>Resources</h3>
</div>
{{! Sample card data inserted for aesthetics. No resource table available at this time }}
<div class='row gy-4'>
  <br />
  {{#each resources as |resource|}}

    <div class='col-md-6 col-xl-4 col-xxl-3'>
      <div class='card card-body card-tile bg-light shadow-sm'>
        <a
          href='/space/{{space_id}}/idea/{{idea_id}}/resource/{{id}}'
          class='overlay-hover inner-down-hover bg-primary text-white shadow'
          style='--bs-bg-opacity: 0.85'
        >
          <span class='d-block px-4 py-3 fs-4 fw-bold text-center'>
            View Resource<br />
            <span class='fw-normal fs-5'>{{name}}</span>
          </span>
        </a>
        <p
          class='m-0 overlay-hover--hide inner-down-hover--also fs-4 d-block text-center'
        >
          <span class='badge fs-5 bg-primary'>{{type}}</span>
          <span class='d-block mt-2'>
            {{name}}
          </span>
          <span class='d-block mt-2'>
            {{content}}
          </span>
        </p>
      </div>
    </div>
  {{/each}}
</div>
<br />
<div class='row resource-form gy-4'>
  <div class='card'>
    <div class='card-body'>
      <form enctype='multipart/form-data'>
        <div class='form-group'>
          <div class='card-title'>
            <label for='addImages' class='fs-4 fw-bold mb-2'>Add images or docs</label>
          </div>

          <label for='image'><input
              class='form-control-file'
              type='file'
              name='image'
              id='image'
              multiple
            /></label>
          <br />
          <br />
          <button
            type='submit'
            id='upload-image'
            class='btn btn-primary'
          >Add</button>
        </div>
      </form>
    </div>
  </div>

  {{! Upload links }}
  <div class='card'>
    <div class='card-body'>
      <form enctype='multipart/form-data'>
        <div class='form-group'>
          <div class='card-title'>
            <label for='link' class='fs-4 fw-bold mb-2'>Add links</label>
          </div>

          <label for='link'><input
              class='form-control'
              type='link'
              name='link'
              multiple
              id='link'
            /></label>
          <br />
          <br />
          <button
            type='submit'
            id='upload-link'
            class='btn btn-primary'
          >Add</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src='/js/resource.js'></script>