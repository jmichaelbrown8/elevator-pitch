<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Elevator Pitch</title>

    {{! Google Fonts }}
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;700;900&display=swap'
      rel='stylesheet'
    />

    {{! Bootstrap Styles/Icons }}
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css'
    />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />

    {{! CSS Animation Helper }}
    <link
      rel='stylesheet'
      href='//cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css'
    />

    {{! Local styling }}
    <link rel='stylesheet' href='/css/bs-overrides.css' />
    <link rel='stylesheet' href='/css/utils.css' />
    <link rel='stylesheet' href='/css/branding.css' />

    {{! jquery min script }}
    <script
      src='https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js'
    ></script>
    
    {{! Bootstrap Script }}

    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js'
    ></script>

  </head>

  <body>
    <nav class='navbar navbar-expand-lg navbar-dark bg-primary'>
      <div class='container'>
        <a href='/' class='navbar-brand'>
          <span class='text-white'>elevator</span><span
            class='text-black'
          >pitch</span>
        </a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarScroll'
          aria-controls='navbarScroll'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarScroll'>
          <ul
            class='navbar-nav ms-auto my-2 my-lg-0 navbar-nav-scroll'
            style='--bs-scroll-height: 100px;'
          >
            <li class='nav-item'>
              {{#if loggedIn}}
                <a
                  class='nav-link'
                  href='#'
                  role='button'
                  id='logout'
                >logout</a>
              {{else}}
                <a class='nav-link' href='/login'>Login</a>
              {{/if}}
            </li>
            <li class='nav-item'>
              <a
                class='nav-link'
                href='#'
                role='button'
                data-bs-toggle='modal'
                data-bs-target='#tips-modal'
              >Tips</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class='mh-fold'>
      <div class='container my-5'>
        <h1 class='fs-1 wow zoomInDown'>Space for
          <span class='fw-bold'>ideas</span></h1>
      </div>

      <main class='container'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
    </div>

    <footer class='bg-secondary px-3 py-5 mt-5'>
      <div class='text-center'>
        <img src='/assets/GitHub-Emblem.png' style='width:80px;height:40px' />
        <a href='https://github.com/jmichaelbrown8/elevator-pitch'></a>
      </div>
    </footer>

    <script
      src='//cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js'
    ></script>
    <script>
      new WOW().init();
    </script>

    <!-- Render script for logged in users only -->
    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}

    {{! Toast Messages }}
    <link
      rel='stylesheet'
      type='text/css'
      href='https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css'
    />
    <script
      type='text/javascript'
      src='https://cdn.jsdelivr.net/npm/toastify-js'
    ></script>
    <script src='/js/toast.js'></script>

    <div class='modal fade' tabindex='-1' id='tips-modal'>
      <div class='modal-dialog'>
        <div class='modal-content'>
          <div class='modal-header'>
            <h5 class='modal-title'></h5>
            <button
              type='button'
              class='btn-close'
              data-bs-dismiss='modal'
              aria-label='Close'
            ></button>
          </div>
          <div class='modal-body text-center'>
            <img
              src='/assets/Pitch-pointers.png'
              style='height:80vh;width:auto'
            />
          </div>
          <div class='modal-footer'>
            <button
              type='button'
              class='btn btn-primary'
              data-bs-dismiss='modal'
            >All done!</button>
          </div>
        </div>
      </div>
    </div>
  </body>

</html>